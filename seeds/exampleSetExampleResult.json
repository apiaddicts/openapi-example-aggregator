{
    "openapi": "3.0.0",
    "info": {
      "title": "Pet Management Service",
      "description": "API to manage a pet inventory",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:8000"
      }
    ],
    "paths": {
      "/pets": {
        "get": {
          "summary": "Get all pets",
          "responses": {
            "200": {
              "$ref": "#/components/responses/Pets"
            }
          }
        },
        "post": {
          "summary": "Create a new pet",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pet"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Pet created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Pet"
                  },
                  "examples": {
                    "example-schema-pet": {
                      "$ref": "#/components/examples/example-schema-pet"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/pets/{id}": {
        "get": {
          "summary": "Get pet details",
          "parameters": [
            {
              "in": "path",
              "name": "id",
              "description": "ID of the pet to retrieve",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "$ref": "#/components/responses/PetById"
            }
          }
        }
      }
    },
    "components": {
      "responses": {
        "PetById": {
          "description": "Details of the requested pet",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Pet"
              },
              "examples": {
                "example-schema-pet": {
                  "$ref": "#/components/examples/example-schema-pet"
                }
              }
            }
          }
        },
        "Pets": {
          "description": "List of pets",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PetList"
              },
              "examples": {
                "example-schema-pet-list": {
                  "$ref": "#/components/examples/example-schema-pet-list"
                }
              }
            }
          }
        }
      },
      "schemas": {
        "Pet": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "example": 123
            },
            "name": {
              "type": "string",
              "example": "Fido"
            },
            "species": {
              "type": "string",
              "example": "Dog"
            },
            "age": {
              "type": "integer",
              "example": 4
            }
          }
        },
        "PetList": {
          "type": "array",
          "items": {
            "$ref": "#/components/schemas/Pet"
          }
        }
      },
      "examples": {
        "example-schema-pet-list": {
          "summary": "Example generated by script",
          "value": [
            {
              "id": 123,
              "name": "Fido",
              "species": "Dog",
              "age": 4
            }
          ]
        },
        "example-schema-pet": {
          "summary": "Example generated by script",
          "value": {
            "id": 123,
            "name": "Fido",
            "species": "Dog",
            "age": 4
          }
        }
      }
    }
  }